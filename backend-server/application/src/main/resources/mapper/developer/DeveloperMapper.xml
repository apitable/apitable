<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vikadata.api.enterprise.gm.mapper.DeveloperMapper">
    <select id="selectByUserId" resultType="com.vikadata.entity.DeveloperEntity">
        SELECT * FROM ${tablePrefix}developer
        WHERE user_id = #{userId}
    </select>

    <update id="updateApiKeyByUserId">
        UPDATE ${tablePrefix}developer
        SET api_key = #{apiKey}
        WHERE user_id = #{userId}
    </update>

    <select id="selectUserIdByApiKey" resultType="java.lang.Long">
        SELECT user_id
        FROM ${tablePrefix}developer
        WHERE api_key = #{apiKey}
    </select>
</mapper>
