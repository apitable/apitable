# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8

[*.{groovy,java,kt,xml}]
insert_final_newline = true
trim_trailing_whitespace= true
end_of_line = lf
indent_style = space
indent_size = 4

[*.gradle]
indent_style = space
indent_size = 2

[*.yml]
indent_size = 2
