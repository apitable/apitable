{
  "name": "@apitable/core",
  "version": "1.8.0",
  "description": "datasheet core",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf ./dist && tsc && tsc-alias",
    "build-cjs": "rm -rf ./dist && tsc --module commonjs && tsc-alias",
    "build-rollup": "rm -rf ./dist && rollup -c --bundleConfigAsCjs && tsc-alias",
    "build:publish": "rm -rf ./dist && tsc -p tsconfig.publish.json && tsc-alias -p tsconfig.publish.json && mv ./dist/index-publish.d.ts ./dist/index.d.ts",
    "start": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "test": "TZ=Asia/Shanghai jest",
    "test:databus": "TZ=Asia/Shanghai jest databus",
    "test:watch": "TZ=Asia/Shanghai jest --watch",
    "test:cov": "TZ=Asia/Shanghai jest --coverage",
    "lint": "eslint src",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "author": "APITable Ltd. <support@apitable.com>",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=8.x"
  },
  "dependencies": {
    "@apitable/databus-wasm-nodejs": "workspace:*",
    "@apitable/databus-wasm-web": "workspace:*",
    "@apitable/i18n": "^1.0.4",
    "@apitable/i18n-lang": "workspace:*",
    "@types/lodash": "^4.14.197",
    "@types/socket.io-client": "^1.4.36",
    "apphook": "1.0.6",
    "attr-accept": "^2.1.0",
    "axios": "0.21.4",
    "color": "^3.1.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dayjs": "^1.11.7",
    "fflate": "^0.8.0",
    "fuse.js": "^6.4.1",
    "immer": "9.0.16",
    "joi": "^17.9.2",
    "json-schema": "^0.4.0",
    "lodash": "^4.17.21",
    "lru-cache": "^5.1.1",
    "moment-timezone": "^0.5.42",
    "ot-json0": "^1.1.0",
    "phone": "^3.1.10",
    "qs": "^6.11.2",
    "re-reselect": "^4.0.0",
    "redux": "4.2.0",
    "redux-batched-actions": "0.5.0",
    "redux-thunk": "2.4.1",
    "reselect": "4.0.0",
    "semver": "^7.5.2",
    "socket.io-client": "2.2.0",
    "string.prototype.matchall": "^4.0.2",
    "urlcat": "^2.0.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/color": "^3.0.1",
    "@types/jest": "^29.2.1",
    "@types/json-schema": "^7.0.12",
    "@types/lru-cache": "^5.1.1",
    "@types/mockjs": "^1.0.7",
    "@types/node": "^14.14.34",
    "@types/qs": "^6.9.4",
    "@types/string.prototype.matchall": "^4.0.1",
    "eslint": "^7.21.0",
    "fast-check": "^3.6.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.2.2",
    "mockjs": "1.1.0",
    "ot-fuzzer": "^1.3.0",
    "rollup": "^4.1.4",
    "ts-jest": "28.0.3",
    "ts-node": "^10.9.1",
    "ts-toolbelt": "^9.6.0",
    "tsc-alias": "^1.6.11",
    "tslib": "^2.6.2",
    "typescript": "4.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".(spec|test).ts$",
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "@apitable/databus-wasm-web": "<rootDir>/_skip_transpile_databus_wasm_web.ts"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
