{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/src/**/*.(spec|test).[jt]s?(x)"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "^.+\\.js$"
  ],
  "moduleDirectories": [
    "src",
    "node_modules"
  ],
  "setupFiles": [
    "dotenv/config"
  ],
  "setupFilesAfterEnv": [
    "@apitable/i18n-lang"
  ]
}
