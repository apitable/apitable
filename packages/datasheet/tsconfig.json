{
  "extends": "../../common-tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "pc": [
        "./src/pc"
      ],
    },
    "module": "esnext",
    "baseUrl": "./src",
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ]
}
